.authform.mx-auto
  .card
    .card-body
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
        %p.lead.text-center= t('views.auth.titles.sign_up')
        %hr
        = devise_error_messages!
        .form-group
          = f.email_field :email, class: 'form-control', placeholder: t('forms.email'), required: true
        .form-group
          = f.password_field :password, class: 'form-control', placeholder: t('forms.password'), required: true
        .form-group
          = f.password_field :password_confirmation, class: 'form-control', placeholder: t('forms.confirm_password'), required: true
        = f.submit t('views.auth.titles.sign_up'), :class => 'btn btn-primary btn-block', data: { disable_with: t('buttons.signing_up') }
.mt-3.text-center
  = link_to t('views.auth.have_an_account'), new_user_session_path
      