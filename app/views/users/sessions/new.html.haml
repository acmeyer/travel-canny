.authform.card.mx-auto
  .card-body
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
      %h2.text-center= t('views.auth.titles.sign_in')
      %hr
      = devise_error_messages!
      .form-group
        = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: t('forms.email'), required: true
      .form-group
        = f.password_field :password, class: 'form-control', placeholder: t('forms.password'), required: true
      = f.submit t('views.auth.titles.sign_in'), :class => 'btn btn-primary btn-block', data: { disable_with: t('buttons.signing_in') }
      .mt-3.text-center
        = link_to t('views.auth.forgot_password'), new_password_path(resource_name)
