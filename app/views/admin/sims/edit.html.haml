%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "SIMs", admin_sims_path
  %li.breadcrumb-item.active Edit SIM

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Editing SIM #{@sim.id}
      .actions
        = link_to 'Show', [:admin, @sim], class: 'btn btn-light'

    %hr
    = form_for [:admin, @sim] do |f|
      .row.justify-content-center
        .col-sm-6
          = render 'form_fields', f: f, sim: @sim
          %hr
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block', data: {disable_with: 'Updating...'}
