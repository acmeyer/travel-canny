%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Users", admin_users_path
  %li.breadcrumb-item
    = link_to @user.id, admin_user_path(@user)
  %li.breadcrumb-item.active New Stripe Customer

.card
  .card-body
    .d-flex.justify-content-between
      %h3 New Stripe Customer

    %hr
      = form_for [:admin, @user, @stripe_customer] do |f|
        .row.justify-content-center
          .col-sm-6
            = render 'form_fields', f: f, stripe_customer: @stripe_customer
            %hr
            .actions
              = f.submit 'Create', class: 'btn btn-primary btn-block', data: {disable_with: 'Creating...'}