%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Shipments", admin_shipments_path
  %li.breadcrumb-item.active New Shipment

.card
  .card-body
    .d-flex.justify-content-between
      %h3 New Shipment

    %hr
    = form_for [:admin, @shipment] do |f|
      .row.justify-content-center
        .col-sm-6
          = render 'form_fields', f: f, shipment: @shipment
          %hr
          .actions
            = f.submit 'Create', class: 'btn btn-primary btn-block', data: {disable_with: 'Creating...'}
