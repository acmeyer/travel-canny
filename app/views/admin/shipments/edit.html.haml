%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Shipments", admin_shipments_path
  %li.breadcrumb-item.active Edit Shipment

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Editing Shipment #{@shipment.id}
      .actions
        = link_to 'Show', [:admin, @shipment], class: 'btn btn-light'

    %hr
    = form_for [:admin, @shipment] do |f|
      .row.justify-content-center
        .col-sm-6
          = render 'form_fields', f: f, shipment: @shipment
          %hr
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block', data: {disable_with: 'Updating...'}
