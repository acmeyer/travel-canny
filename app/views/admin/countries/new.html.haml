%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Countries", admin_countries_path
  %li.breadcrumb-item.active New Country

.card
  .card-body
    .d-flex.justify-content-between
      %h3 New Country

    %hr
    = form_for [:admin, @country] do |f|
      .row.justify-content-center
        .col-sm-6    
          = render 'form_fields', f: f, country: @country
          %hr
          .actions
            = f.submit 'Create', class: 'btn btn-primary btn-block', data: {disable_with: 'Creating...'}
