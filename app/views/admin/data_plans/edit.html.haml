%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Users", admin_users_path
  %li.breadcrumb-item
    = link_to @user.id, admin_user_path(@user)
  %li.breadcrumb-item.active Edit Data Plan

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Editing Data Plan #{@data_plan.id}
      .actions
        = link_to 'Show', [:admin, @user, @data_plan], class: 'btn btn-light'

    %hr
    = form_for [:admin, @user, @data_plan] do |f|
      .row.justify-content-center
        .col-sm-6    
          = render 'form_fields', f: f, data_plan: @data_plan
          %hr
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block', data: {disable_with: 'Updating...'}
