%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Users", admin_users_path
  %li.breadcrumb-item
    = link_to @user.id, admin_user_path(@user)
  %li.breadcrumb-item.active Trip Details

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Trip Details
      .actions    
        = link_to 'Edit', edit_admin_user_trip_path(@user, @trip), class: 'btn btn-light'
        = link_to 'Delete', admin_user_trip_path(@user, @trip), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    %hr
    .row.mb-3
      .col-sm-2.text-sm-right
        %strong Countries:
      .col-sm-10
        .text-left
          - @trip.countries.each do |country|
            %p= country.name